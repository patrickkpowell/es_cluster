instances:
{% for host in groups['all_es_nodes'] %}
  - name: "{{ hostvars[host]['ansible_fqdn'] }}"
    dns:
      - "{{ hostvars[host]['ansible_fqdn'] }}"
      - "{{ hostvars[host]['ansible_nodename'] }}"
    ip:
      - "{{ hostvars[host]['priv_ip'] }}"
      - "{{ hostvars[host]['ext_ip'] }}"
    filename: "{{ host }}"
{% endfor %}
